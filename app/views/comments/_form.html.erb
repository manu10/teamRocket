<%= form_for [@producto, @comment], html:{class:'form-horizontal'} do |f| %>
<% if @comment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@comment.errors.count, "error") %> No se pudo realizar el comentario:</h2>

      <ul>
      <% @comment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

 <fieldset>
    <h2>Realizar un comentario:</h2><hr>
    <p>
    <div class="control-group">
      <%= f.label "Deje su comentario:", class:'col-sm-3 control-label' %>
      <div class="col-sm-6 controls">
        <span class="help-block">(El comentario debe tener entre 5 y 255 caracteres)</span>
        <%= f.text_area :mensaje,{value:@mensaje,cols:80,rows:5,class:'form-control text_field'}  %>
      </div>
    </div>
    </p>
    
    <div class="control-group">
        <div class="col-sm-9 col-sm-offset-3">
            <ul id="errors"></ul>
        </div>
    </div>
    
    <p>
    <div class="col-sm-12 form-actions">
      <%= f.submit "Hecho" , class:'btn btn-primary' %>
    </div>
    </p>
   </fieldset>
<% end %>