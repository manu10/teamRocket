<%= form_for([@producto, @comment]) do |f| %>
<% if @comment.errors.any? %>
      <ul>
         <% @comment.errors.each do |mensaje| %>
         <li> <%= mensaje %> </li>
         <% end %>
      </ul>
   <% end %>
  <p>
    <%= f.label "Escriba su comentario:" %><br>
    <%= f.text_area :mensaje, autofocus: true , :required => "required", class:"form-control",cols:80,rows:5 %>
  </p>
  <p>
    <%= f.submit "Hecho" %>
  </p>
<% end %>