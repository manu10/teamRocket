<h1>Perfil de Usuario </h1>

<ul class="nav nav-pills nav-stacked">
<%= link_to 'Editar perfil', edit_user_registration_path, class:'btn btn-primary'%>
<%= link_to "Ver mis ofertas", oferts_path(user_id:current_user.id), class:'btn btn-primary' %>
<%= link_to "Ver mis subastas", user_index_path,class:'btn btn-primary'%>
</ul>

<form class="form-horizontal" role="form">
  <div class="form-group">
    <label class="col-lg-2 control-label">Nombre completo</label>
    <div class="col-lg-10">
      <%= current_user.name %>
    </div>
  </div>
  <div class="form-group">
    <label class="col-lg-2 control-label">DNI</label>
    <div class="col-lg-10">
      <%= current_user.DNI %>
    </div>
  </div>
    <div class="form-group">
    <label class="col-lg-2 control-label">Tipo de usuario</label>
    <div class="col-lg-10">
      <% if current_user.role_id=="1" %>
        <%= "Usuario" %>
      <% else %>
        <%= "Administrador" %>
      <% end %>
    </div>
  </div>
    <div class="form-group">
    <label class="col-lg-2 control-label">E-mail</label>
    <div class="col-lg-10">
      <%= current_user.email %>
    </div>
  </div>
    <div class="form-group">
    <label class="col-lg-2 control-label">Fecha de nacimiento</label>
    <div class="col-lg-10">
      <%= current_user.birthDate.strftime("%d de %B de %Y") %>
    </div>
  </div>
    <div class="form-group">
    <label class="col-lg-2 control-label">Domicilio</label>
    <div class="col-lg-10">
      <% domi=current_user.domicile %>
      <%= "Calle " + domi.street + ", nÃºmero " + domi.number.to_s + ", " + domi.city + ", provincia de " + domi.province + ", " + domi.country %>
    </div>
  </div>
</form>




