<h2>Iniciar sesion</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
 
<div class="row center-block">
  <div class="field col-md-4 center-block" >
    
    <%= f.label "Email"  %>
    <%= f.email_field :email, autofocus: true, type: "email", class:"form-control", id: "exampleInputEmail1", placeholder: "Ingresar e-mail" %>
  </div>
  </div>


  <div class="row center-block">
  <div class="field col-md-4 center-block" >
    
    <%= f.label :Contraseña %><br />
    <%= f.password_field :password, autocomplete: "off", class:"form-control",id:"exampleInputPassword1",placeholder: "Ingresar Contraseña" %>
    
  </div>
  </div>

  
    <div class="row center-block">
    <div class="field col-md-4 center-block " >
  <% if devise_mapping.rememberable? -%>
     <%= f.check_box :remember_me %>
      <%= f.label :Recordarme %>
  <% end -%>    
  </div>
  </div>
    
     <div class="row center-block">
    <div class="field col-md-4 center-block " >
  
  <div class="actions">
    <%= f.submit "Iniciar sesion",class:"btn btn-default" %>
  </div>
  </div>
  </div>

<% end %>
 <div class="row center-block">
    <div class="field col-md-4 center-block " >
<%= render "devise/shared/links" %>
  </div>
  </div>

