
<% if @productos.size==0 %>
<h1>NO HAY SUBASTAS :'(</h1>
        
      <% else %>
      
        <%= params[:search]%>
      <h1>Subastas Vigentes(Por ahora son todas XD)</h1>
 <li class="dropdown">

            <a data-toggle="dropdown" class="dropdown-toggle">Ordenar<b class="caret"></b></a>

            <ul class="dropdown-menu">

                <li><%= link_to 'Alfabeticamente', :orden => "titulo asc" %></li>

                <li class="divider"></li>

                <li><%= link_to 'fecha creacion', :orden => "created_at asc" %></li>               

            </ul>

        </li>
<dl>
    <% @productos.each do |producto| %>

      <dt><%= producto.titulo %> </dt>
      <img src="<%=producto.UrlImage%>" alt="Smiley face" style="max-width: 5%; max-height: 5%;">
 <!--  <img style:'max-width:10%;'><%= image_tag producto.image_url() if producto.image? %><br> -->
  <dt><%= producto.descripcion %></dt>
  <dd></dd>
  <dt>Publicado: </dt>
  <dd><%= producto.created_at %></dd>
  <dt>Vence: </dt>
  <dd><%= producto.vencimiento %></dd>
  <%= link_to 'Show', producto, class:'btn btn-default' %>
  <%= link_to 'Edit', edit_producto_path(producto), class:'btn btn-default' %>
  <%= link_to 'Destroy', producto, method: :delete, data: { confirm: 'Estas seguro?' }, class:'btn btn-danger' %>
  <br>
  <% end %>
    </dl>
<br>
<% end %><br>

<%= link_to 'New Producto', new_producto_path %>


