<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

 
  <div class="row center-block">
    <div class="center-block col-md-4">
    <%= f.label :name%>
    <%= f.text_field :name, autofocus: true , :required => "required", class:"form-control" %>
    </div>
  </div>


  <div class="row center-block">
    <div class="center-block col-md-4">
    <%= f.label :phone%>
    <%= f.telephone_field :phone, autofocus: true , :required => "required", class:"form-control" %>
    </div>
  </div>
  
  <div class="row center-block">
    <div class="center-block col-md-4">
    <%= f.label :birthDate%><br>
    <%= f.date_select :birthDate,:order => [:day, :month, :year], autofocus: true , :required => "required", class:"form-control" %>
    </div>
  </div>

  <div class="row center-block">
    <div class="center-block col-md-4">
    <%= f.label :DNI%>
    <%= f.text_field :DNI, autofocus: true , :required => "required", class:"form-control" %>
    </div>
  </div>

  <div class="row center-block">
  <div class="field col-md-4 center-block" >
    
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, type: "email", class:"form-control", id: "exampleInputEmail1", placeholder: "Enter email" %>
  </div>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="row center-block">
  <div class="field col-md-4 center-block" >
    <%= f.label :password %> <i>(mantener en blanco si no quiere cambiar)</i>
    <%= f.password_field :password, autocomplete: "off", class:"form-control" %>
  </div>
  </div>
<div class="row center-block">
  <div class="field col-md-4 center-block" >
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control" %>
  </div>
  </div>
<div>DOMICILIO</div>
<ul>


   <%= f.fields_for :domicile, resource.domicile do |s| %>
    <div class="row center-block">
    <div class="center-block col-md-4">  
    <%= s.label :country, class:"label-domicile" %>
    <%= s.text_field :country, autofocus: true , :required => "required", class:"form-control form-domicile" %>
    </div>
    </div>

    <div class="row center-block">
    <div class="center-block col-md-4">  
    <%= s.label :province, class:"label-domicile" %>
    <%= s.text_field :province, autofocus: true , :required => "required", class:"form-control form-domicile" %>
    </div>
    </div>
     <div class="row center-block">
    <div class="center-block col-md-4">  
    <%= s.label :city, class:"label-domicile" %>
    <%= s.text_field :city, autofocus: true , :required => "required", class:"form-control form-domicile" %>
    </div>
    </div>

    <div class="row center-block">
    <div class="center-block col-md-4">  
    <%= s.label :street, class:"label-domicile" %>
    <%= s.text_field :street, autofocus: true , :required => "required", class:"form-control form-domicile" %>
    </div>
    </div>

    <div class="row center-block">
    <div class="center-block col-md-4">  
    <%= s.label :number, class:"label-domicile" %>
    <%= s.text_field :number, autofocus: true , :required => "required", class:"form-control form-domicile" %>
    </div>
    </div>
   
   <% end %>
   </ul>
<div class="row center-block">
  <div class="field col-md-4 center-block" >
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "off", class:"form-control" %>
  </div>
  </div>
  <div class="actions">
    <%= f.submit "Update", class:" btn btn-default" %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
