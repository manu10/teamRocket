<%= form_for [@producto, @comment, @answer], html:{class:'form-horizontal'} do |f| %>
<% if @answer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@answer.errors.count, "error") %> Error al enviar la respuesta:</h2>

      <ul>
      <% @answer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

 <fieldset>
    <p>
    <div class="control-group">
      <%= f.label "Comentario:", class:'col-sm-5 control-label' %>
      <div class="col-sm-5 controls">
         <p class="form-control-static"><%=@comment.mensaje%></p>
      </div>
    </div>
    </p>

    <p>
    <div class="control-group">
      <%= f.label "Respuesta:", class:'col-sm-5 control-label' %>
      <div class="col-sm-5 controls">
        <%= f.text_area :content,{cols:80,rows:5,class:'form-control text-field'}  %>
      </div>
    </div>
    </p>
    
    <div class="control-group">
        <div class="col-sm-9 col-sm-offset-3">
            <ul id="errors"></ul>
        </div>
    </div>
    
    <p>
    <div class="col-lg-10 form-actions">
      <%= f.submit "Hecho" , class:'btn btn-primary' %>
    </div>
    </p>
   </fieldset>
<% end %>